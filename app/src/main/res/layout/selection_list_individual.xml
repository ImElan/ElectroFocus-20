<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/count_id"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/student_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student 1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/student_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student 2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/student_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student 3"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/college_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:textColor="#606060"
            android:text="Valliammai College of Engineering"/>
    </LinearLayout>

</LinearLayout>