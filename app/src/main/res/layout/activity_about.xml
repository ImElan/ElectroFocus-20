<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="elan.mit.electrofocus.AboutActivity">
        <include
            layout="@layout/app_layout_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="190dp"
                            android:layout_height="200dp"
                            android:src="@drawable/electro_focus"/>
                        <TextView
                            android:padding="5dp"
                            android:layout_marginTop="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:text="ElectroFocus"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="An Inter college National level technical flamboyance, Electrofocus is devised and effectuated by the Electronics Engineers Association of Madras Institute of Technology. With 25+ events for elex and algo stream brain boxes and 8+ workshops for the engineers to be, the symposium is one of the best platforms for all the aspiring engineers to showcase their talents and to those who wish to furnish them."
                            android:textSize="15sp"
                            android:textColor="#606060"/>
                        <LinearLayout
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="20dp"
                            android:background="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFFFFF"
                                    android:text="WHEN"/>
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="JAN 31 - FEB 2"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFFFFF"
                                    android:text="WHERE"/>
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MIT, CHROMPET"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="For Complete Schedule Of Events and WorkShops Download the Poster"
                            android:textStyle="bold"
                            android:textColor="#EC5252"
                            android:textSize="18sp"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="35dp"
                            android:layout_marginStart="35dp"/>
                        <Button
                            android:id="@+id/download_button"
                            android:background="@drawable/download_button"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="25dp"
                            android:paddingEnd="25dp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="18dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#000000"
                            android:text="Team EEA"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/horizontal_recycler_view"
                            android:orientation="horizontal">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text="Follow Our Instagram And Facebook Page"/>
                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/instagram_id"
                            android:layout_marginEnd="20dp"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/instagram"/>
                        <ImageView
                            android:id="@+id/facebook_id"
                            android:layout_width="32dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="32dp"
                            android:src="@drawable/facebook"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="5dp"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Developed by Elan..!"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>
