<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="25dp"
        android:layout_weight="3"
        android:id="@+id/slide_image"
        android:layout_gravity="center"
        android:layout_width="@dimen/slide_image_width"
        android:layout_height="@dimen/slide_image_height"
        app:srcCompat="@drawable/slide_1"/>
    <TextView
        android:layout_weight="1"
        android:id="@+id/slide_heading"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/slide_heading"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="Heading"/>
    <TextView
        android:layout_weight="6"
        android:id="@+id/slide_description"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingBottom="30dp"
        android:paddingTop="@dimen/text_padding_top"
        android:layout_marginTop="@dimen/text_margin_top"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/slide_text"
        android:textColor="@color/colorTransparentWhite"
        android:textAlignment="center"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type."/>
</LinearLayout>